*, *::before, *::after {
  box-sizing border-box
}

body, html {
  font-family: sans-serif
  margin: 0
  padding: 0
}

border = 1px solid #c5c5c5;
color = #444

.resize
  height: 15px
  z-index 500
  //cursor: n-resize
  border-bottom: border

.menu
  width: 100%
  flex-wrap wrap
  display flex

  &__item
    user-select none
    text-transform uppercase
    letter-spacing 1.5px
    cursor pointer
    color color
    align-items center
    padding: 0 10px;
    border-right: border
    border-top: border
    transition 0.42s ease
    display flex
    height: 30px

    &.active
      background lightgray

    &:hover
      background #fafafa

.frame
  height: 100vh
  position relative

  iframe
    width: 100%
    height: 100%

.editor
  display flex
  height: 50vh

  &__self
    width: 100%
    height: 100%
    color color
    border none
    border-left border
    border-top: border
    border-bottom: border

  &__window
    min-width: 33%
    flex 1

    &.editor__hide
      display none

      &:focus
        outline none

.theme__dark
  .editor
    &__window
      textarea
        border: none
        color: #ABB2BF
        background #282C34
