.resize
  height: 9px
  z-index 500
  border-bottom: border

.menu
  width: 100%
  display flex
  justify-content space-between

  &__extend
    opacity 0
    background #fff
    pointer-events none
    position absolute
    transform scale(0.75) translate(18px, -27px)
    right: 0
    transition 0.3s cubic-bezier(0.23, 1, 0.32, 1);
    min-width: 280px
    display flex
    flex-direction column
    border-top: border
    border-bottom: border
    top: 100%
    z-index 5

    &.active
      transform scale(1) translate(0, 0)
      pointer-events unset
      opacity 1

  &__left, &__right
    position relative
    display flex

  &__right
    .menu__item
      border-right: none
      border-left: border

  &__item
    user-select none
    text-transform uppercase
    letter-spacing 1.5px
    cursor pointer
    color color
    align-items center
    padding: 0 12px;
    transition 0.32s cubic-bezier(0.23, 1, 0.32, 1);
    display flex
    border-right: border
    height: 30px
    z-index: 2;

    &.active
      color: #aaa
      background #f0f0f0

    &:active
      box-shadow inset 0 0 12px rgba(0, 0, 0, 0.25)

    &:hover
      background #f5f5f5

.frame
  height: 100vh
  position relative

  iframe
    width: 100%
    height: 100%

.editor
  display flex
  height: 50vh

  &__self
    width: 100%
    height: 100%
    color color
    border none
    border-left border
    border-top: border
    border-bottom: border

  &__window
    min-width: 33%
    flex 1

    &.editor__hide
      display none

      &:focus
        outline none

.theme__dark
  .editor
    &__window
      textarea
        border: none
        color: #ABB2BF
        background #282C34


