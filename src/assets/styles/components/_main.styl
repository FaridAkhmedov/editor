.resize
  height: 9px
  z-index 500
  border-bottom: border

.frame
  height: 100vh
  position relative

  iframe
    width: 100%
    height: 100%

.editor
  display flex
  height: 50vh

  &__self
    width: 100%
    height: 100%
    color color
    border none
    border-left border
    border-top: border
    border-bottom: border

  &__window
    min-width: 33%
    position relative
    flex 1

    &::before
      content attr(data-tip)
      position absolute
      padding 4px 8px 6px
      color #888
      font-size 13px
      letter-spacing 1px
      text-transform uppercase
      font-weight 600
      text-align center
      bottom: 0
      z-index 10
      right: 8px
      background rgba(0, 0, 0, 0.1)
      border-top-left-radius 8px

    &.editor__hide
      display none

      &:focus
        outline none

.theme__dark
  .editor
    &__window
      textarea
        border: none
        color: #abb2bf
        background #282c34


