transition_transform = box-shadow 175ms cubic-bezier(0.215, 0.610, 0.355, 1.000)
transition_background = background 0s ease

extend_animation_t = transform 200ms cubic-bezier(0.23, 1, 0.32, 1)
extend_animation_o = opacity 50ms ease-in

.menu {
  width: 100%
  display flex
  justify-content space-between

  &__extend {
    transform scale(0.6) translate(12px, -20px)
    transition extend_animation_t, extend_animation_o;
    transform-origin top right
    will-change transform
    border-bottom: border
    flex-direction column
    pointer-events none
    border-top: border
    position absolute
    min-width: 280px
    background #fff
    overflow hidden
    display flex
    z-index 5
    opacity 0
    top: 100%
    right: 0

    &.active {
      transform scale(1) translate(0, 0)
      pointer-events unset
      opacity 1
    }
  }

  &__left, &__right {
    position relative
    display flex
  }

  &__right .menu__item {
    border-right: none
    border-left: border
  }

  &__item--text {
    text-transform uppercase
    font-weight 600
    letter-spacing 1px
  }

  &__item.material-icons {
    padding: 0 6px;
  }

  &__item {
    user-select none
    cursor pointer
    text-align center
    color color
    align-items center
    padding: 0 12px;
    transition transition_transform, transition_background
    display flex
    border-right: border
    height: 30px
    z-index: 2;

    &.active {
      color: #aaa
      background #f0f0f0
    }

    &:active {
      box-shadow inset 0 0 12px rgba(0, 0, 0, 0.25)
    }

    &:hover {
      background #f5f5f5
    }
  }
}